<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">
            <TextView
                style="@style/pop_text"
                android:text="1.编一个程序，输入一个数值，输出小于他的所有质数。" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="被辨别的整数：" />

                <EditText
                    android:id="@+id/et_num"
                    style="@style/text"
                    android:inputType="number" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_check"
                    style="@style/text"
                    android:text="验证" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="return:" />

                <TextView
                    android:id="@+id/tv_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <TextView
                style="@style/pop_text"
                android:text="2.用“*”体现等腰三角形" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标参数：" />

                <EditText
                    android:id="@+id/et_num_2"
                    style="@style/text"
                    android:inputType="number" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_show_2"
                    style="@style/text"
                    android:text="执行" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:text="Return:" />

                <TextView
                    android:id="@+id/tv_return_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp" />

            </LinearLayout>

            <TextView
                style="@style/pop_text"
                android:text="3.球两个参数的最大公约数，和最小公倍数" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标参数：" />

                <EditText
                    android:id="@+id/et_num_3_1"
                    style="@style/text"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_num_3_2"
                    style="@style/text"
                    android:inputType="number" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_calculator"
                    style="@style/text"
                    android:text="计算" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Return:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大公约数：" />

                <TextView
                    android:id="@+id/tv_max_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="最小公倍数：" />

                <TextView
                    android:id="@+id/tv_min_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                style="@style/pop_text"
                android:text="4.输入一个正整数分解质因数，例如：输入90打印出90=2*3*3*5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标参数：" />

                <EditText
                    android:id="@+id/et_num_4"
                    style="@style/text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_suan_4"
                    style="@style/text"
                    android:text="计算" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result:" />


                <TextView
                    android:id="@+id/tv_result_4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                style="@style/pop_text"
                android:text="5.一块钱分成一分，二分，五分的硬币，假定每种至少一枚，编程计算共有多少种兑换方法，打印各种兑换方法" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Result:" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_suan_5"
                    style="@style/text"
                    android:layout_marginRight="30dp"
                    android:text="计算" />


            <TextView
                android:id="@+id/tv_result_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" />
        </LinearLayout>


        <TextView
            style="@style/pop_text"
            android:text="6.一个正整数有可能被表示为n(n-2)个连续正整数之和，如：\n15=1+2+3+4+5\n15=4+5+6\n15=7+8\n请编写程序，根据输入的任何一个正整数，找出符合这种要求的所有连续正整数序列。\n输出数据：一个正整数：以命令行参数的形式提供给程序。\n输出数据：在标准输出上打印出符合题目描述的全部正整数序列，每行一个序列，每个序列都会从该序列的最小正整数开始，以最小到最大的顺序打印，如果结果又多个序列，按个序列的最小正整数的大小从小到大打印各序列，此外，序列不允许重复，序列内的整数用一个空格分割，如果没有符合要求的序列，输出“NONE”\n例如，对于15，其输出结果是：\n1 2 3 4 5\n4 5 6\n7 8\n对于16，其输出结果是：NONE"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标参数："/>

            <EditText
                style="@style/text"
                android:id="@+id/et_num_6"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                style="@style/text"
                android:id="@+id/tv_test_6"
                android:text="输出"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return："
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_return_6"
            android:layout_marginLeft="100dp"
            />

        <TextView
            style="@style/pop_text"
            android:text="7.有N个人围成一圈，顺序排号。从第一个人开始报数（从1到3报数），凡报到3的人退出圈子，问最后留下来的是原来几号的那位"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总人数："
                />
            <EditText
                style="@style/text"
                android:id="@+id/et_num_7"
                />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"/>

            <TextView
               style="@style/text"
                android:text="执行"
                android:id="@+id/tv_play_7"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/tv_result_7"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>