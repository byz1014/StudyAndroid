<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">45dp</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="listPreferredItemPaddingLeft"></item>-->
    </style>


    <style name="progress" >
        <item name="android:indeterminateDrawable">@drawable/shape_list_progress</item>
    </style>

    <style name="dialog_me" parent="@android:style/Theme.DeviceDefault.Light.Dialog">

        <!--自定义对话框-->
            <!-- 这里设置背景为透明，为了隐藏边框 -->
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowNoTitle">true</item>
            <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
            <item name="android:topDark">#0000</item>
            <!-- 这里是修改内容区域背景颜色 -->
            <item name="android:centerDark">#0000</item>
            <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="text">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:background">@drawable/shape_text</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="dialog">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_text_2</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>



    <style name="pop_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_pop</item>
        <item name="android:textColor">#9000</item>
        <item name="android:textSize">13dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 高版本 -->
    <style name="ItemHeight">
        <item name="android:listPreferredItemHeightSmall">25dp</item>
    </style>

</resources>
